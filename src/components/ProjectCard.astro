  ---
interface ProjectCardProps {
  title: string;
  description: string;
  icons: { src: string; alt: string }[];
  link: string;
}

const { title, description, icons, link } = Astro.props as ProjectCardProps;
---

<a 
  href={link} 
  class="group relative block bg-[#1e293b] border border-gray-600 rounded-xl p-5 
         transition-all duration-300 transform hover:-translate-y-2 hover:border-gray-400"
  target="_blank"
  rel="noopener noreferrer"
>

  <!-- Arrow appears on hover -->
  <svg 
    class="absolute top-3 right-3 w-5 h-5 text-gray-300 opacity-0 group-hover:opacity-100 transition-opacity duration-300" 
    fill="currentColor" 
    viewBox="0 0 24 24"
  >
    <path d="M14 3h7v7h-2V6.41l-9.29 9.3-1.42-1.42 9.3-9.29H14V3z"/>
  </svg>

  <h3 class="text-lg text-white font-bold mb-1">{title}</h3>
  <p class="text-gray-300 text-sm mb-3">{description}</p>

  <!-- Dynamic Icons -->
  <div class="flex gap-2">
    {icons.map(({ src, alt }) => (
      <img src={src} alt={alt} class="w-5 h-5" loading="lazy" />
    ))}
  </div>
</a>
