---
interface ProjectCardProps {
  title: string;
  description: string;
  icons: { src: string; alt: string }[];
  link: string;
  github_link:  string 
}

const { title, description, icons, link } = Astro.props as ProjectCardProps;
---

<div class="group relative block bg-[#1e293b] border border-gray-600 rounded-xl p-5 transition-all duration-300 transform hover:-translate-y-2 hover:border-gray-400">

  <!-- Arrow appears on hover -->
  
  <h3 class="text-lg text-white font-bold mb-1">{title}</h3>
  <p class="text-gray-300 text-sm mb-3">{description}</p>
  
  <!-- Dynamic Icons -->
  <div class="flex gap-2">
    {icons.map(({ src, alt }) => (
      <img src={src} alt={alt} class="w-5 h-5" loading="lazy" />
    ))}
  </div>
  

<div class="flex items-center justify-end gap-3 mt-2">
  <!-- Link Icon (hover → más grande y negro) -->
  <a href={link} target="_blank">
    <svg 
    viewBox="0 0 16 16" 
    xmlns="http://www.w3.org/2000/svg"
    class="w-5 h-5 fill-gray-300 hover:fill-black transition-all duration-300 transform hover:scale-125"
    >
